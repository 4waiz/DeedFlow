# NextAuth (required)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-strong-random-secret
GOOGLE_CLIENT_ID=replace-with-google-client-id
GOOGLE_CLIENT_SECRET=replace-with-google-client-secret

# Database (Supabase + Prisma)
# DATABASE_URL: Supabase Session Pooler URI (IPv4-friendly) used by Prisma Client/runtime.
DATABASE_URL=postgresql://postgres.<project-ref>:<password>@aws-0-<region>.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=1
# DIRECT_URL: Supabase Direct Postgres URI used by Prisma migrations.
# If direct is unreachable in your network, set DIRECT_URL equal to DATABASE_URL.
DIRECT_URL=postgresql://postgres:<password>@db.<project-ref>.supabase.co:5432/postgres

# Feature flags
DEMO_MODE=false
NEXT_PUBLIC_DEMO_MODE=false

# Storage
S3_REGION=
S3_BUCKET=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_ENDPOINT=
S3_FORCE_PATH_STYLE=false
S3_PUBLIC_BASE_URL=

# Optional integrations
GROQ_API_KEY=
GROQ_CHAT_API_KEY=
LINGODOTDEV_API_KEY=
